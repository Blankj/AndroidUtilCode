<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/spModifyTitleTv"
        style="@style/InfoTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:text="title" />

    <com.blankj.utildebug.base.view.FloatEditText
        android:id="@+id/spModifyEt"
        style="@style/InputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spModifyTitleTv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/du_search_tips"
        tools:text="hello" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spModifyEt"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spModifyCancelTv"
            style="@style/InfoContentStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/du_shape_btn"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/du_cancel"
            android:textColor="@color/darkGrayDark"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/spModifyYesTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/du_shape_btn"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/du_confirm"
            android:textColor="@color/loveGreenDark"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>


</RelativeLayout>