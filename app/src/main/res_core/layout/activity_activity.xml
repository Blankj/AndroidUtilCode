<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/spacing_16">

    <ImageView
        android:id="@+id/view_shared_element"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:src="@drawable/avatar_round"
        android:transitionName="@string/activity_shared_element" />

    <TextView
        android:id="@+id/tv_about_activity"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_clz"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_clz" />

    <Button
        android:id="@+id/btn_clz_opt"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_clz_opt" />

    <Button
        android:id="@+id/btn_clz_anim"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_clz_anim" />

    <Button
        android:id="@+id/btn_act_clz"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_clz" />

    <Button
        android:id="@+id/btn_act_clz_opt"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_clz_opt" />

    <Button
        android:id="@+id/btn_act_clz_shared_element"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_clz_shared_element" />

    <Button
        android:id="@+id/btn_act_clz_anim"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_clz_anim" />

    <Button
        android:id="@+id/btn_pkg_cls"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_pkg_cls" />

    <Button
        android:id="@+id/btn_pkg_cls_opt"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_pkg_cls_opt" />

    <Button
        android:id="@+id/btn_pkg_cls_anim"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_pkg_cls_anim" />

    <Button
        android:id="@+id/btn_act_pkg_cls"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_pkg_cls" />

    <Button
        android:id="@+id/btn_act_pkg_cls_opt"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_pkg_cls_opt" />

    <Button
        android:id="@+id/btn_act_pkg_cls_shared_element"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_pkg_cls_shared_element" />

    <Button
        android:id="@+id/btn_act_pkg_cls_anim"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_pkg_cls_anim" />

    <Button
        android:id="@+id/btn_intent"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_intent" />

    <Button
        android:id="@+id/btn_intent_opt"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_intent_opt" />

    <Button
        android:id="@+id/btn_intent_shared_element"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_intent_shared_element" />

    <Button
        android:id="@+id/btn_intent_anim"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_intent_anim" />

    <Button
        android:id="@+id/btn_intents"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_intents" />

    <Button
        android:id="@+id/btn_intents_opt"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_intents_opt" />

    <Button
        android:id="@+id/btn_intents_anim"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_intents_anim" />

    <Button
        android:id="@+id/btn_act_intents"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_intents" />

    <Button
        android:id="@+id/btn_act_intents_opt"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_intents_opt" />

    <Button
        android:id="@+id/btn_act_intents_anim"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_act_intents_anim" />

    <Button
        android:id="@+id/btn_start_home_activity"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_start_home_activity" />

    <Button
        android:id="@+id/btn_finish_activity"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_finish_activity" />

    <Button
        android:id="@+id/btn_finish_to_activity"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_finish_to_activity" />

    <Button
        android:id="@+id/btn_finish_all_activities"
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_finish_all_activities" />

</LinearLayout>
